<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:paddingTop="24dp"
    android:paddingHorizontal="16dp">

    <!-- 1) TITLE -->

    <!-- 2) FILTER BUTTON GROUP -->
    <TextView
        android:id="@+id/titleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Range Splitter"
        android:textColor="@color/textPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/filterGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:layout_constraintTop_toBottomOf="@id/titleName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipVolume"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            app:chipBackgroundColor="@color/chip_background_color"
            android:textColor="@color/chip_text_color"
            app:checkedIconEnabled="false" />


        <com.google.android.material.chip.Chip
            android:id="@+id/chipChange"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24h %"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            app:chipBackgroundColor="@color/chip_background_color"
            android:textColor="@color/chip_text_color"
            app:checkedIconEnabled="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipVolatility"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volatility"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            app:chipBackgroundColor="@color/chip_background_color"
            android:textColor="@color/chip_text_color"
            app:checkedIconEnabled="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAlphabetical"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aâ€“Z"
            android:textSize="12sp"
            app:chipBackgroundColor="@color/chip_background_color"
            android:textColor="@color/chip_text_color"
            app:checkedIconEnabled="false" />
    </com.google.android.material.chip.ChipGroup>


    <!-- 3) SEARCH BAR -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/coinSearchContainer"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Search coin"
        android:layout_marginTop="16dp"
        app:boxBackgroundColor="@color/cardInputBG"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:startIconDrawable="@android:drawable/ic_menu_search"
        app:startIconTint="@color/textPrimary"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:boxStrokeColor="@android:color/transparent"

        app:layout_constraintTop_toBottomOf="@id/filterGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/coinList"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingHorizontal="8dp"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textMuted"
            android:textSize="14sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 4) COIN LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCoins"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/coinSearchContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/layout_item_coin"/>

</androidx.constraintlayout.widget.ConstraintLayout>
