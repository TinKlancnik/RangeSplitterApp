<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050910"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- TOP BAR: COIN + PRICE -->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/coinChip"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#0F1724"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/coinInitials"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="BT"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/pairName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="BTC/USD"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/coinChip"
            app:layout_constraintTop_toTopOf="@id/coinChip"
            app:layout_constraintBottom_toTopOf="@+id/assetSubtitle" />

        <TextView
            android:id="@+id/assetSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Bitcoin"
            android:textColor="#7C8899"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/coinChip"
            app:layout_constraintTop_toBottomOf="@id/pairName"
            app:layout_constraintBottom_toBottomOf="@id/coinChip" />

        <TextView
            android:id="@+id/currentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$43,521.36"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/coinChip"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/priceChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+671.36 (+1.57%)"
            android:textColor="#00C087"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/currentPrice"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 24H STATS ROW -->

        <LinearLayout
            android:id="@+id/statsRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:weightSum="4"
            app:layout_constraintTop_toBottomOf="@+id/coinChip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 24H HIGH -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24H HIGH"
                    android:textColor="#7C8899"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/highValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$44,321.5"
                    android:textColor="#00C087"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 24H LOW -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24H LOW"
                    android:textColor="#7C8899"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/lowValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$42,067.72"
                    android:textColor="@color/vibrant_red"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- VOLUME -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VOLUME"
                    android:textColor="#7C8899"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/volumeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0B"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- MARKET CAP -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FUNDING RATE"
                    android:textColor="#7C8899"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/mcapValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$840B"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- TIMEFRAME TOGGLES -->

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/timeframeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:layout_constraintTop_toBottomOf="@id/statsRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.chip.Chip
                android:id="@+id/btn1m"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1m"
                android:textSize="10sp"
                android:layout_marginEnd="8dp"
                app:chipBackgroundColor="@color/chip_background_color"
                app:chipSurfaceColor="@android:color/transparent"
                android:textColor="@color/chip_text_color"
                app:checkedIconEnabled="false" />


            <com.google.android.material.chip.Chip
                android:id="@+id/btn5m"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5m"
                android:textSize="10sp"
                android:layout_marginEnd="8dp"
                app:chipBackgroundColor="@color/chip_background_color"
                android:textColor="@color/chip_text_color"
                app:chipSurfaceColor="@android:color/transparent"
                app:checkedIconEnabled="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/btn15m"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15m"
                android:textSize="10sp"
                android:layout_marginEnd="8dp"
                app:chipBackgroundColor="@color/chip_background_color"
                android:textColor="@color/chip_text_color"
                app:chipSurfaceColor="@android:color/transparent"
                app:checkedIconEnabled="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/btn1h"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1h"
                android:textSize="10sp"
                app:chipBackgroundColor="@color/chip_background_color"
                android:textColor="@color/chip_text_color"
                app:chipSurfaceColor="@android:color/transparent"
                app:checkedIconEnabled="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/btn4h"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4h"
                android:textSize="10sp"
                app:chipBackgroundColor="@color/chip_background_color"
                app:chipSurfaceColor="@android:color/transparent"
                android:textColor="@color/chip_text_color"
                app:checkedIconEnabled="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/btnD"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                android:textSize="10sp"
                app:chipBackgroundColor="@color/chip_background_color"
                app:chipSurfaceColor="@android:color/transparent"
                android:textColor="@color/chip_text_color"
                app:checkedIconEnabled="false" />
        </com.google.android.material.chip.ChipGroup>

        <!-- CHART AREA (hook this to your ChartsView API) -->

        <com.tradingview.lightweightcharts.view.ChartsView
            android:id="@+id/charts_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/timeframeGroup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/indicatorsCard" />

        <!-- INDICATORS SECTION -->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/indicatorsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#0F1724"
            app:cardCornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/indicatorsTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Indicators"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/indicatorsExpandIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/arrow_up_float" />
                </LinearLayout>

                <!-- 3 x 2 grid of tiles -->
                <GridLayout
                    android:id="@+id/indicatorsGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:columnCount="3">

                    <!-- MA -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnMacro"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="6dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#11151F"
                        app:strokeColor="#1F2937"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/macroTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Macro"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/macroSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Macro Indicator"
                                android:textColor="#9AA0B5"
                                android:textSize="10sp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnEMA"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="6dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#11151F"
                        app:strokeColor="#1F2937"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/emaTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EMA"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/emaSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EMA 12"
                                android:textColor="#9AA0B5"
                                android:textSize="10sp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnMA"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="6dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#11151F"
                        app:strokeColor="#1F2937"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/maTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MA"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/maSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SMA 20"
                                android:textColor="#9AA0B5"
                                android:textSize="10sp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnBB"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="6dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#11151F"
                        app:strokeColor="#1F2937"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/bbTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BB"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/bbSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SMA 20"
                                android:textColor="#9AA0B5"
                                android:textSize="10sp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnDON"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="6dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#11151F"
                        app:strokeColor="#1F2937"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/donTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DON"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/donSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Donchian"
                                android:textColor="#9AA0B5"
                                android:textSize="10sp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnSUP"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="6dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#11151F"
                        app:strokeColor="#1F2937"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/supTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HL"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/supSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="High/Low"
                                android:textColor="#9AA0B5"
                                android:textSize="10sp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </GridLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
