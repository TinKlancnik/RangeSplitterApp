<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/bg_coin_item"
    android:paddingHorizontal="16dp"
    android:paddingVertical="10dp">

    <!-- LEFT: SYMBOL -->
    <TextView
        android:id="@+id/txtCoinSymbol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="BTC"
        android:textColor="@color/textPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtCoinPrice"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- LEFT: FULL NAME (takes leftover space, truncates if too long) -->
    <TextView
        android:id="@+id/txtCoinName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Very Very Long Coin Name That Won't Fit"
        android:textSize="12sp"
        android:textColor="@color/textMuted"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/txtCoinSymbol"
        app:layout_constraintStart_toStartOf="@id/txtCoinSymbol"
        app:layout_constraintEnd_toStartOf="@id/txtCoinPrice" />

    <!-- RIGHT: PRICE -->
    <TextView
        android:id="@+id/txtCoinPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="$87,116.00"
        android:textColor="@color/textPrimary"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- RIGHT: % CHANGE -->
    <TextView
        android:id="@+id/txtCoinChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="+0.99%"
        android:textColor="@color/vibrant_green"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/txtCoinPrice"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
