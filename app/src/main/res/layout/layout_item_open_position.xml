<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="14dp"
    android:gravity="center_vertical"
    android:background="@color/primary"
    android:divider="@android:color/transparent"
    android:showDividers="middle"
    android:dividerPadding="8dp">

    <!-- First Row: Coin Name, Direction, Coin Price, TP/SL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Coin info and Direction -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="start">

            <!-- Coin Name -->
            <TextView
                android:id="@+id/coinName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC/USDT"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textPrimary" />

            <!-- Direction -->
            <TextView
                android:id="@+id/direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long"
                android:textSize="14sp"
                android:textColor="@color/green" />
        </LinearLayout>

        <!-- Price and TP/SL Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_weight="1">

            <!-- TP/SL -->
            <TextView
                android:id="@+id/tpSl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TP/SL"
                android:textColor="@color/textPrimary"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Second Row for Quantity and Average Price -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <!-- Quantity Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <!-- Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Quantity"
                android:textColor="@color/textMuted"
                android:textSize="12sp" />

            <!-- Quantity -->
            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.05"
                android:textColor="@color/textPrimary"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Average Price Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <!-- Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Avg. Price"
                android:textColor="@color/textMuted"
                android:textSize="12sp" />

            <!-- Average Price -->
            <TextView
                android:id="@+id/avgPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30000.0"
                android:textColor="@color/textPrimary"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Third Row for Unrealized PnL and Leverage -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <!-- Unrealized PnL Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <!-- Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Unrealized PnL"
                android:textColor="@color/textMuted"
                android:textSize="12sp" />

            <!-- Unrealized PnL -->
            <TextView
                android:id="@+id/unrealizedPnl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150.0"
                android:textColor="@color/textPrimary"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Leverage Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <!-- Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Leverage"
                android:textColor="@color/textMuted"
                android:textSize="12sp" />

            <!-- Leverage -->
            <TextView
                android:id="@+id/leverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10x"
                android:textColor="@color/textPrimary"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Cancel Button -->
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:stateListAnimator="@null"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="12sp" />

</LinearLayout>
