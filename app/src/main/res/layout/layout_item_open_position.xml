<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="14dp"
    android:gravity="center_vertical"
    android:background="@color/primary"
    android:divider="@android:color/transparent"
    android:showDividers="middle"
    android:dividerPadding="8dp">

    <!-- First Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Coin name and direction (with leverage below) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <!-- Coin Name and Direction in one row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Coin Name -->
                <TextView
                    android:id="@+id/coinName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BTC/USDT"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/textPrimary"
                    android:layout_marginEnd="8dp" />

                <!-- Direction -->
                <TextView
                    android:id="@+id/direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Long"
                    android:textSize="14sp"
                    android:textColor="@color/vibrant_green" />
            </LinearLayout>

            <!-- Leverage -->
            <TextView
                android:id="@+id/leverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10x"
                android:textSize="12sp"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Unrealized PnL on the far right -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_gravity="center_vertical">

            <!-- Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unrealized P&amp;L"
                android:textColor="@color/textMuted"
                android:textSize="10sp" />

            <!-- PnL value -->
            <TextView
                android:id="@+id/unrealizedPnl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150.0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary" />
        </LinearLayout>
    </LinearLayout>

    <!-- Second Row: Avg. Price and Size (Quantity) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <!-- Avg. Price -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entry Price"
                android:textColor="@color/textMuted"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/avgPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30000.0"
                android:textColor="@color/textPrimary"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Size / Quantity -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textColor="@color/textMuted"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.05"
                android:textColor="@color/textPrimary"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/journalButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Save"
                android:textAllCaps="false"
                app:icon="@drawable/diary"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                style="@style/Widget.Material3.Button"
                android:backgroundTint="@color/buttonDefault"
                android:textColor="@color/white"
                app:iconTint="@color/white"
                app:cornerRadius="20dp"
                android:checkable="true"
                android:layout_gravity="end"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
