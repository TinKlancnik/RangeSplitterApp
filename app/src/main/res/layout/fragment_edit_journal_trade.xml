<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <!-- Top bar -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        app:srcCompat="@drawable/ic_back"
        app:tint="@color/textMuted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOL/USDT"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="12dp"
        android:background="@android:color/transparent"
        android:contentDescription="Delete"
        app:srcCompat="@drawable/ic_trash"
        app:tint="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack" />

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#0F1623"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/textMuted"
                app:strokeWidth="1dp"
                app:contentPadding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EDIT TRADE"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:letterSpacing="0.08"
                        android:textColor="@color/textMuted"
                        android:layout_marginBottom="12dp" />

                    <!-- Trading Pair -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trading Pair"
                        android:textSize="12sp"
                        android:textColor="@color/textMuted" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/cardInputBG"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxStrokeColor="@color/textMuted"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="1dp"
                        app:hintTextColor="@color/textMuted">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPair"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:minHeight="56dp"
                            android:gravity="center_vertical"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:hint="SOL/USDT"
                            android:inputType="text"
                            android:enabled="false"
                            android:textColor="@color/textPrimary"
                            android:textColorHint="@color/textMuted"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Row 1: Entry + Quantity -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <!-- Entry -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Entry Price"
                                android:textSize="12sp"
                                android:textColor="@color/textMuted" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                app:boxBackgroundMode="filled"
                                app:boxBackgroundColor="@color/cardInputBG"
                                app:boxCornerRadiusTopStart="14dp"
                                app:boxCornerRadiusTopEnd="14dp"
                                app:boxCornerRadiusBottomStart="14dp"
                                app:boxCornerRadiusBottomEnd="14dp"
                                app:boxStrokeColor="@color/textMuted"
                                app:boxStrokeWidth="1dp"
                                app:boxStrokeWidthFocused="1dp"
                                app:hintTextColor="@color/textMuted">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etEntry"
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"
                                    android:minHeight="56dp"
                                    android:gravity="center_vertical"
                                    android:paddingStart="14dp"
                                    android:paddingEnd="14dp"
                                    android:hint="98.5"
                                    android:inputType="numberDecimal"
                                    android:textColor="@color/textPrimary"
                                    android:textColorHint="@color/textMuted"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <!-- Quantity -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quantity"
                                android:textSize="12sp"
                                android:textColor="@color/textMuted" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                app:boxBackgroundMode="filled"
                                app:boxBackgroundColor="@color/cardInputBG"
                                app:boxCornerRadiusTopStart="14dp"
                                app:boxCornerRadiusTopEnd="14dp"
                                app:boxCornerRadiusBottomStart="14dp"
                                app:boxCornerRadiusBottomEnd="14dp"
                                app:boxStrokeColor="@color/textMuted"
                                app:boxStrokeWidth="1dp"
                                app:boxStrokeWidthFocused="1dp"
                                app:hintTextColor="@color/textMuted">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etQty"
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"
                                    android:minHeight="56dp"
                                    android:gravity="center_vertical"
                                    android:paddingStart="14dp"
                                    android:paddingEnd="14dp"
                                    android:hint="25"
                                    android:inputType="numberDecimal"
                                    android:textColor="@color/textPrimary"
                                    android:textColorHint="@color/textMuted"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Row 2: Leverage + Current -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <!-- Leverage -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Exit Price"
                                android:textSize="12sp"
                                android:textColor="@color/textMuted" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                app:boxBackgroundMode="filled"
                                app:boxBackgroundColor="@color/cardInputBG"
                                app:boxCornerRadiusTopStart="14dp"
                                app:boxCornerRadiusTopEnd="14dp"
                                app:boxCornerRadiusBottomStart="14dp"
                                app:boxCornerRadiusBottomEnd="14dp"
                                app:boxStrokeColor="@color/textMuted"
                                app:boxStrokeWidth="1dp"
                                app:boxStrokeWidthFocused="1dp"
                                app:hintTextColor="@color/textMuted">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etExit"
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"
                                    android:minHeight="56dp"
                                    android:gravity="center_vertical"
                                    android:paddingStart="14dp"
                                    android:paddingEnd="14dp"
                                    android:hint="102.56"
                                    android:inputType="number"
                                    android:textColor="@color/textPrimary"
                                    android:textColorHint="@color/textMuted"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <!-- Current -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Proffit/Loss"
                                android:textSize="12sp"
                                android:textColor="@color/textMuted" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                app:boxBackgroundMode="filled"
                                app:boxBackgroundColor="@color/cardInputBG"
                                app:boxCornerRadiusTopStart="14dp"
                                app:boxCornerRadiusTopEnd="14dp"
                                app:boxCornerRadiusBottomStart="14dp"
                                app:boxCornerRadiusBottomEnd="14dp"
                                app:boxStrokeColor="@color/textMuted"
                                app:boxStrokeWidth="1dp"
                                app:boxStrokeWidthFocused="1dp"
                                app:hintTextColor="@color/textMuted">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etPnL"
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"
                                    android:minHeight="56dp"
                                    android:gravity="center_vertical"
                                    android:paddingStart="14dp"
                                    android:paddingEnd="14dp"
                                    android:hint="325.67"
                                    android:inputType="numberDecimal"
                                    android:enabled="false"
                                    android:textColor="@color/textPrimary"
                                    android:textColorHint="@color/textMuted"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Position -->



                    <!-- Notes -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Notes"
                        android:textSize="12sp"
                        android:textColor="@color/textMuted" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="@color/cardInputBG"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxStrokeColor="@color/textMuted"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="1dp"
                        app:hintTextColor="@color/textMuted">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNotes"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:gravity="top"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:paddingTop="12dp"
                            android:hint="Add a note..."
                            android:inputType="textMultiLine"
                            android:textColor="@color/textPrimary"
                            android:textColorHint="@color/textMuted"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Save -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="14dp"
                        android:text="Save Changes"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/card"
                        app:cornerRadius="14dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
