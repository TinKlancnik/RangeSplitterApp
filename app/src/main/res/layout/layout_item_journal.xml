<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/divider"
    app:cardBackgroundColor="@color/primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Row 1: Symbol + Side | Leverage pill -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Left: symbol + side -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Small status dot (optional) -->
                <View
                    android:id="@+id/statusDot"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/circle_green" />

                <TextView
                    android:id="@+id/coinName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BTC/USDT"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/textPrimary"
                    android:layout_marginEnd="10dp" />

                <!-- Side badge -->
                <TextView
                    android:id="@+id/direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LONG"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/vibrant_green"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/journal_btn" />
            </LinearLayout>

            <!-- Right: leverage pill -->
            <TextView
                android:id="@+id/leverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10x"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:background="@drawable/journal_btn" />
        </LinearLayout>

        <!-- Row 2: Entry price + Quantity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <!-- Entry -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entry Price"
                    android:textColor="@color/textMuted"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/entryPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$42,500"
                    android:textColor="@color/textPrimary"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exit Price"
                    android:textColor="@color/textMuted"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/exitPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$42,500"
                    android:textColor="@color/textPrimary"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Quantity -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textColor="@color/textMuted"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.5"
                    android:textColor="@color/textPrimary"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 3: P/L bar -->
        <LinearLayout
            android:id="@+id/pnlBar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:background="@drawable/bg_pnl_positive">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P/L"
                android:textColor="@color/textPrimary"
                android:textSize="12sp"
                android:layout_marginEnd="10dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/pnlPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+40.00%"
                android:textStyle="bold"
                android:textColor="@color/vibrant_green"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Row 4: Note / Reason -->
        <TextView
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="&quot;Bullish breakout pattern&quot;"
            android:textColor="@color/textMuted"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:drawableEnd="@drawable/edit"
            android:drawablePadding="8dp"
            android:drawableTint="@color/textMuted"
            android:gravity="center_vertical" />

        <!-- Row 5: Date -->
        <TextView
            android:id="@+id/tradeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Jan 15, 10:30 AM"
            android:textColor="@color/textMuted"
            android:textSize="11sp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
