<resources>
    <!-- Base Theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color Palette -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/cardInputBG</item>
        <item name="colorOnPrimary">@color/textPrimary</item>

        <item name="colorSecondary">@color/primaryAccent</item>
        <item name="colorSecondaryContainer">@color/buttonDefault</item>
        <item name="colorOnSecondary">@color/buttonTextColor</item>

        <item name="colorSurface">@color/primary</item>
        <item name="colorOnSurface">@color/textPrimary</item>
        <item name="colorOnBackground">@color/textPrimary</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>

        <!-- Typography (optional, fallback on Material3 styles) -->
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Material3.BodyMedium</item>

        <!-- Window styling -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom EditText Style -->
    <style name="CustomEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:backgroundTint">@color/cardInputBG</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <!-- Optional for AppCompat legacy EditTexts -->
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/textMuted</item>
        <item name="colorControlActivated">@color/primaryAccent</item>
        <item name="android:textColorHint">@color/textMuted</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <!-- Optional for TextInputLayouts if you use them -->
    <style name="CustomTextInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primaryAccent</item>
        <item name="hintTextColor">@color/textMuted</item>
        <item name="boxBackgroundColor">@color/cardInputBG</item>
    </style>

    <style name="IndicatorButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:backgroundTint">#1C1F26</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

</resources>
